@startuml multi-player-loops
!include lib/game.puml!core
!include lib/i18n.puml!en
skinparam ranksep 30
skinparam nodesep 65
scale max 600 width

$fill_grid_3x1(N)

character -[dashed]d-> "\n\n\nD" player
character -[plain]d-> "B" player
character ~[thickness=1]d~ player
character -[plain]d- "A" player
character -[dashed]d- "C\n\n\n" player

player "\n\n\nW" <-[dashed]d- avatar
player "Y" <-[plain]d- avatar
player ~[thickness=1]d~ avatar
player "Z" -[plain]d- avatar
player "X\n\n\n" -[dashed]d- avatar

$fill_matrix()
$join_matrix_3x1()

$empty_axes()
$join_axes_3x1()
@enduml

@startuml player-action-loop
!include lib/game.puml!core
!include lib/i18n.puml!en
skinparam ranksep 40
skinparam nodesep 70
scale max 1200 width

$fill_grid_5x1()

characterAgent "B" <-[plain]d- character
characterAgent ~[thickness=1]d~ character
characterAgent "C" -[dashed]d- character

character -[dashed]d-> "D" player
character ~[thickness=1]d~ player
character -[plain]d- "A" player

player "W" <-[dashed]d- avatar
player ~[thickness=1]d~ avatar
player "Z" -[plain]d- avatar

avatar -[plain]d-> "Y" avatarAgent
avatar ~[thickness=1]d~ avatarAgent
avatar -[dashed]d- "X" avatarAgent

$fill_matrix()
$join_matrix_3x1()

$empty_axes()
$join_axis_y()
@enduml

