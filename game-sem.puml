$join_matrix_3x3()
@enduml

@startuml matrix-with-protocols
!include lib/game.puml!core
!include lib/i18n.puml!en
skinparam ranksep 20
skinparam nodesep 70

<style>
  .matrix {
    FontSize: 30;
    FontColor: Grey;
  }
</style>

$iconify_players()

$fill_grid_3x3(2)

$empty_axes_1x1()
$join_axes_3x3()

$fill_matrix()
$join_matrix_3x3()
