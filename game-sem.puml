@startuml player-with-axes
!include lib/game.puml!core
!include lib/i18n.puml!en
skinparam ranksep 20
skinparam nodesep 1

<style>
  .axis {
    FontColor: black;
  }
</style>

$iconify_players()

$fill_axes()
$empty_axes_1x1()
$join_axes_3x3(hidden, hidden)
@enduml

@startuml matrix-with-axes
!include lib/game.puml!core
!include lib/i18n.puml!en
skinparam ranksep 40
skinparam nodesep 1

<style>
  label {
    FontSize: 30;
  }
</style>

$iconify_players()

$fill_axes()
$empty_axes_1x1()
$join_axes_3x3(hidden, hidden)

