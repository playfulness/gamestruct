@enduml

@startmindmap axis-x-with-clarifications-ru
!include lib/game.puml!core
!include lib/i18n.puml!ru

<style>
node {
  MaximumWidth 1000
  Padding 5
  Margin 10
}
.term {
  FontSize 30
  LineColor DimGrey
  LineThickness 0.5
  BackgroundColor transparent
}
.defn {
  FontSize 20
  BackgroundColor transparent
  LineColor transparent
}
</style>

+ $translate(xAxisNegativeTerm) <<term>>
++ нечто умозрительное (только логическое пребывание) <<defn>>

+ $translate(xAxisPositiveTerm) <<term>>
++ нечто осязаемое (только физическое пребывание) <<defn>>
@endmindmap

